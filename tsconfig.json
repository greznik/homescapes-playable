{
	"compileOnSave": false,
	"compilerOptions": {
		"outDir": "./out",
		"target": "es2017",
		"lib": [
			"dom",
			"es2017",
			"es2019.array"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"allowJs": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"incremental": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.js"
	],
	"exclude": [
		"./out/*"
	]
}
